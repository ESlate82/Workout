= simple_form_for(@workout, html: { class: 'form-horizontal' }) do |f|
    = f.input :date, label: "Date"
    = f.input :workout, label: "Workout Type?", input_html: { class: "form-control" }
    = f.input :mood, label: "How Was Your Mood?", input_html: { class: "form-control" }
    = f.input :length, label: "Length of Your Workout?", input_html: { class: "form-control" }
    %br/
    = f.button :submit